.app {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.divHead {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffba03;
  padding: 20rpx;
}

.divTitle {
  font-size: 36rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.imgArrow {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.divUser {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.imgHead {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.desc {
  display: flex;
  flex-direction: column;
}

.divName {
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.imgGender {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.divPhone {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

.divContent {
  flex: 1;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.divLinks {
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.item {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.imgLink {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.txtLink {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

.imgArrow {
  width: 40rpx;
  height: 40rpx;
}

.divSplit {
  height: 1rpx;
  background-color: #f5f5f5;
}

.divOrders {
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.timeStatus {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.dishList {
  margin-bottom: 20rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.result {
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.price {
  color: #ff0000;
  margin-left: 10rpx;
}

.btn {
  display: flex;
  justify-content: flex-end;
}
.btnAgain{
  background-color: #f00;
  border-radius: 5px;
  color: #fff;
  padding: 5px 10px;
}

.quitLogin {
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
  border-radius: 10px;
}